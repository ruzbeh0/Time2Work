{
  "compilerOptions": {
    "jsx":"react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "typeRoots": ["./types"],
    "resolveJsonModule": true,
    "paths": {
      "mod.json": ["../mod.json"]
    }
  },
} 
